<div class="row">
  {{> admin-menu}}
  <div class="col-md-8">
    <div class="col-md-12 col-md-offset-1">
      <h1>Upload Product</h1>
      <form action="/admin/addProduct" method="post">
        <div class="form-group">
          <label>Sku</label>
          <input type="text" id="sku" name="sku" class="form-control">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input type="text" id="imagePath" name="imagePath" class="form-control">
        </div>
        <div class="form-group">
          <label>Name</label>
          <input type="text" id="nameProduct" name="nameProduct" class="form-control">
        </div>
        <div class="form-group">
          <label>Description</label>
          <input type="text" id="descriptionProduct" name="descriptionProduct" class="form-control">
        </div>
        <div class="form-group">
          <label>Category</label>
            <input type="text" id="categoryProduct" name="categoryProduct" class="form-control">
        </div>
        <div class="form-group">
          <label>Size</label>
          <input type="text" id="sizeProduct" name="sizeProduct" class="form-control">
        </div>
        <div class="form-group">
          <label>Color</label>
          <input type="text" id="colorProduct" name="colorProduct" class="form-control">
        </div>
        <div class="form-group">
          <label>Stock</label>
          <input type="text" id="stock" name="stock" class="form-control">
        </div>
        <div class="form-group">
          <label>Price</label>
          <input type="text" id="price" name="price" class="form-control">
        </div>
        <button type="submit" name="button" class="btn btn-primary">Add Product</button>
      </form>
    </div>
  </div>
</div>
